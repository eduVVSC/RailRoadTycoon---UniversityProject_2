<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane"
            stylesheets="@../css/login.css" styleClass="box"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="800.0" prefWidth="1200.0"
            fx:controller="pt.ipp.isep.dei.application.Authentication.AuthenticationFxController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Top Section -->
        <top>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="20" top="30" />
                </padding>

                <Label style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                       text="LOGIN MENU" />
                <Separator maxWidth="300" />
            </VBox>
        </top>

        <!-- Center Section -->
        <!-- Center Section -->
        <center>
            <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
                <GridPane fx:id="formGrid" hgap="10" maxWidth="400" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="118.0" minWidth="110.0" prefWidth="93.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="297.5" minWidth="150.0" prefWidth="296.5" />
                    </columnConstraints>
                    <Label prefWidth="93.0" text="Username/Email:" styleClass="label" style="-fx-text-fill: #ecf0f1;"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" wrapText="true"/>
                    <TextField fx:id="emailField" promptText="Type your username/email" styleClass="text-field"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Password:" styleClass="label" style="-fx-text-fill: #ecf0f1"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" wrapText="true" />
                    <PasswordField fx:id="passwordField" promptText="Type your password" styleClass="password-field"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label fx:id="messageLabel"
                           GridPane.columnIndex="0"
                           GridPane.columnSpan="2"
                           GridPane.rowIndex="2"
                           wrapText="true"
                           alignment="CENTER"
                           textAlignment="CENTER"

                           style="-fx-text-fill: red;-fx-font-size: 26px;" />

                    <Button fx:id="loginButton" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="loginButton" />
                </GridPane>
            </VBox>
        </center>

        <bottom>
            <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS" />
                <VBox fx:id="roleActionsContainer" alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS" />
            </VBox>
        </bottom>

    </BorderPane>
</AnchorPane>
