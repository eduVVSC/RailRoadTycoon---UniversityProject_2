        <!--            <ImageView fx:id="imageView" preserveRatio="true" fitWidth="800" fitHeight="600"/>-->
        <!--            <Label fx:id="infoLabel" text="Area that shows a text" styleClass="info-label"-->
        <!--                   StackPane.alignment="TOP_RIGHT"/>-->
        <!--        </StackPane>-->
        <StackPane fx:id="graphContainer"
                   prefWidth="800" prefHeight="600"
                   VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                   style="-fx-background-color: transparent;
                  -fx-background-radius: 15;
                  -fx-border-radius: 15;
                  -fx-border-color: #ccc;
                  -fx-border-width: 1;
                  -fx-padding: 0;" />
    </HBox>
</VBox>

