      fx:controller="pt.ipp.isep.dei.application.UserMenus.EditorMapMenuController"
      prefHeight="800.0" prefWidth="1200.0"
      styleClass="box" stylesheets="@../css/PlayerMenu.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox spacing="10" VBox.vgrow="ALWAYS">

        <!-- Left Buttons Pane -->
        <VBox spacing="10" fx:id="buttonsPane" styleClass="left-pane" HBox.hgrow="NEVER">
            <Button fx:id="btn1"  styleClass="button"/>
            <Button fx:id="btn2"  styleClass="button"/>
            <Button fx:id="btn3"  styleClass="button"/>
            <Button fx:id="btn4"  styleClass="button"/>
        </VBox>

        <!-- Image and Label Area -->
